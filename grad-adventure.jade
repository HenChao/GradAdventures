head
    title Graduate Adventures
    link(href='http://fonts.googleapis.com/icon?family=Material+Icons',rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Dosis' rel='stylesheet' type='text/css')
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    meta(name='viewport',content='width=device-width, initial-scale=1.0')

body
  if playerNameNotSet 
    .red.lighten-2.title-header
      h1 Graduate Adventures
    +startForm
  else
    .red.lighten-2.ingame-header
      .row
        .col.s8.m8.l8
          h5 Graduate Adventures
        .col.s4.m4.l4
          .valign-wrapper
            i.small.material-icons contacts
            .valign {{playerName}}
          .valign-wrapper
            i.small.material-icons today
            .valign {{date}}          
    +gameField

template(name='startForm')
  .valign-wrapper.startForm
    .row.valign
      .input-field.startFormUserName
        input(placeholder='Enter your name' type='text' id='username')
      a.waves-effect.btn.center-align.startFormStartButton Start!

template(name='gameField')
  .console(id='console')
  .input-row.row.valign-wrapper
    .col.s6.m4.l4.valign
      .avatar.center-align
        .sprite-small(id='sprite')
    if showInputButtons
      .options.col.s6.m8.l8
        ul(id='optionsList')
          li
            a.waves-effect.btn.option.red.darken-4 {{optionA}}
          li
            a.waves-effect.btn.option.purple.darken-4 {{optionB}}
          li
            a.waves-effect.btn.option.indigo.darken-4 {{optionC}}
          li
            a.waves-effect.btn.option.teal.darken-4 {{optionD}}
      script.
        Materialize.showStaggeredList('#optionsList');
